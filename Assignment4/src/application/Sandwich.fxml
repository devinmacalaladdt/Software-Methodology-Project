<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SandwichController">
   <center>
      <AnchorPane prefHeight="672.0" prefWidth="614.0" BorderPane.alignment="CENTER">
         <children>
            <ComboBox fx:id="meat" layoutX="38.0" layoutY="82.0" onAction="#selectMeat" prefWidth="150.0" promptText="Meat">
            
            	<items>
			        <FXCollections fx:factory="observableArrayList">
			          <String fx:value="Chicken" />
			          <String fx:value="Beef" />
			          <String fx:value="Fish" />
			        </FXCollections>
      			</items>
            
            </ComboBox>
            <ImageView fx:id="sandwichPicture" fitHeight="150.0" fitWidth="200.0" layoutX="400.0" layoutY="33.0" pickOnBounds="true" preserveRatio="true" />
            <ListView fx:id="extraIngredients" layoutX="7.0" layoutY="230.0" prefHeight="286.0" prefWidth="158.0" />
            <Label layoutX="245.0" layoutY="24.0" prefHeight="18.0" prefWidth="98.0" text="basic ingredients" />
            <TextArea fx:id="display" layoutY="538.0" prefHeight="134.0" prefWidth="614.0" />
            <ListView fx:id="addedIngredients" layoutX="262.0" layoutY="228.0" prefHeight="288.0" prefWidth="154.0" />
            <TextField fx:id="price" layoutX="439.0" layoutY="378.0" />
            <Label layoutX="439.0" layoutY="360.0" prefHeight="18.0" prefWidth="38.0" text="Price $" />
            <Button fx:id="addToOrder" layoutX="439.0" layoutY="439.0" mnemonicParsing="false" onAction="#addToOrder" text="Add to Order" />
            <Button fx:id="showOrder" layoutX="439.0" layoutY="465.0" mnemonicParsing="false" onAction="#showOrder" text="Show Order" />
            <Label layoutX="281.0" layoutY="195.0" text="Extra Ingredients" />
            <Button fx:id="addIngredients" layoutX="182.0" layoutY="357.0" mnemonicParsing="false" onAction="#addIngredients" text="Add &gt;" />
            <Button fx:id="removeIngredients" layoutX="182.0" layoutY="391.0" mnemonicParsing="false" onAction="#removeIngredients" text="&lt; Remove" />
            <TextArea fx:id="basicIngredients" layoutX="194.0" layoutY="42.0" prefHeight="135.0" prefWidth="200.0" />
            <Button fx:id="clear" layoutX="181.0" layoutY="427.0" mnemonicParsing="false" onAction="#resetListViews" text="Clear" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
