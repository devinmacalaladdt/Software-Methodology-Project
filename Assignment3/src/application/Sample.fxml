<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
   <center>
      <TabPane prefHeight="137.0" prefWidth="670.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="Print/File Input">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
          <Tab text="Open/Close">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
          <Tab text="Deposit/Withdrawl">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox layoutX="36.0" layoutY="2.0" prefHeight="102.0" prefWidth="253.0">
                           <children>
                              <TextField promptText="First Name" />
                              <TextField promptText="Last Name" />
                              <TextField promptText="Amount" />
                           </children>
                        </VBox>
                        <HBox layoutX="393.0" layoutY="27.0" prefHeight="26.0" prefWidth="138.0">
                           <children>
                              <Button mnemonicParsing="false" text="Deposit" />
                              <Button mnemonicParsing="false" text="Withdrawal" />
                           </children>
                        </HBox>
                     </children></AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </center>
   <left>
      <VBox prefHeight="104.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <RadioButton mnemonicParsing="false" text="Savings">
               <toggleGroup>
                  <ToggleGroup fx:id="account_type" />
               </toggleGroup>
            </RadioButton>
            <RadioButton mnemonicParsing="false" text="Checking" toggleGroup="$account_type" />
            <RadioButton mnemonicParsing="false" text="Money Market" toggleGroup="$account_type" />
         </children>
      </VBox>
   </left>
   <top>
      <DialogPane prefHeight="135.0" prefWidth="770.0" BorderPane.alignment="CENTER" />
   </top>
</BorderPane>
